<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:id="@+id/titleText" android:layout_gravity="center_horizontal"
        android:textSize="@dimen/title_text"
        android:layout_marginTop="15dp" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Game"
        android:id="@+id/newGameBtn" android:layout_column="0" android:layout_gravity="center_horizontal"
        android:onClick="newGame"
        android:layout_margin="30dp"
        android:textSize="@dimen/abc_text_size_medium_material" />
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_gravity="center" android:id="@+id/tableLayout">
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    "
                android:id="@+id/topLeft" android:layout_column="1" android:width="100dp" android:height="100dp"
                android:textSize="@dimen/x_o_text"
                android:layout_margin="5dp" />
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" "
                android:id="@+id/topCenter" android:layout_column="2" android:width="100dp" android:height="100dp"
                android:textSize="@dimen/x_o_text"
                android:layout_margin="5dp" />
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" "
                android:id="@+id/topRight" android:layout_column="3" android:width="100dp" android:height="100dp"
                android:textSize="@dimen/x_o_text"
                android:layout_margin="5dp" />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" "
                android:id="@+id/middleLeft" android:layout_column="1" android:width="100dp" android:height="100dp"
                android:textSize="@dimen/x_o_text"
                android:layout_margin="5dp" />
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" "
                android:id="@+id/middleCenter" android:layout_column="2" android:width="100dp" android:height="100dp"
                android:textSize="@dimen/x_o_text"
                android:layout_margin="5dp" />
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" "
                android:id="@+id/middleRight" android:layout_column="3" android:width="100dp" android:height="100dp"
                android:textSize="@dimen/x_o_text"
                android:layout_margin="5dp" />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" "
                android:id="@+id/bottomLeft" android:layout_column="1" android:width="100dp" android:height="100dp"
                android:textSize="@dimen/x_o_text"
                android:layout_margin="5dp" />
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" "
                android:id="@+id/bottomCenter" android:layout_column="2" android:width="100dp" android:height="100dp"
                android:textSize="@dimen/x_o_text"
                android:layout_margin="5dp" />
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/bottomRight" android:layout_column="3" android:width="100dp" android:height="100dp"
                android:textSize="@dimen/x_o_text"
                android:layout_margin="5dp" />
        </TableRow>
    </TableLayout>
</LinearLayout>
